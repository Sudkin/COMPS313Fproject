<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- 左側區塊 (圖片 + 標籤) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/childButton"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_child"
                android:scaleType="centerInside"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Student" />

            <TextView
                android:id="@+id/childLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <!-- 中間的分隔線 -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp" />

        <!-- 右側區塊 (圖片 + 標籤) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/caregiverButton"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_caregiver"
                android:scaleType="centerInside"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Parent" />

            <TextView
                android:id="@+id/caregiverLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parent"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>